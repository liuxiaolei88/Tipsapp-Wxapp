
<!-- 添加信息页面 -->
<form>
<van-cell-group>
  <van-field
    value="{{ username }}"
    clearable
    label="物品名称"
    icon="question-o"
    placeholder="请输入物品名称"
    bind:click-icon="onClickIcon"
  />

  <van-field
    value="{{ remark }}"
    type="remark"
    label="备注"
    placeholder="请输入备注"
    border="{{ false }}"
  />

  <van-field
    value="{{ number}}"
    type="number"
    label="数量"
    placeholder="请输入数量"
    border="{{ false }}"
  />
</van-cell-group>



<van-uploader file-list="{{ fileList }}" max-count="9" deletable="{{ true }}"  bind:after-read="afterRead"/>


<van-button bindtap="onTap" color="#3CB371" plain type="info" size="normal">分类{{value}}</van-button>


<van-action-sheet
  show="{{ show }}"
  actions="{{ arr }}"
  bind:close="onClose"
  bind:select="onSelect"
/>




<van-button  round bindtap="onClick" color="#3CB371" type="info" size="normal">提交</van-button>
</form>
<navigator url="../../main/main" open-type="navigate"></navigator>